{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2017",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": false,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "useDefineForClassFields": false,
        "jsx": "react",
        "jsxFactory": "h"
    },
    "include": ["src"],
}
